Colors = {
	white:       #fff
	wisp:        #f4f4f4
	steel:       #ccc
	cloud:       #8e8e8e
	black:       #000000
	clover:      #1aaf69
	error:       #c01111
	gold:        #b6974b
}

.styleguide-color-figure
	div
		height: 5px;
		margin-bottom: 10px;
	h4
		color: Colors.cloud

for name in Colors
	.styleguide-color-figure
		.{name}
			background-color: Colors[name]


/*-
name: 		'Colors Pallets'
parent: 	'Colors'
desc: 		'Text and background color combinations used throughout the site.'
