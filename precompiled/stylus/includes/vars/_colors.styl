commentData:
		colorExamples: [
			{name: 'White'       , class: 'white'}
			{name: 'Wisp'        , class: 'wisp'}
			{name: 'Steel'       , class: 'steel'}
			{name: 'Cloud'       , class: 'cloud'}
			{name: 'Black'       , class: 'black'}
			{name: 'Error'       , class: 'error'}
			{name: 'Clover'      , class: 'clover'}
			{name: 'Gold'        , class: 'gold'}
		]
		_usageData :
			root                : '.styleguide-color-figure'
			classes             : ['No Direct Usage.']
			classesToRemove     : []
			includes            : ["No Direct Usage."]
			cssSelectors :
				'div'  : ['background-color']
examples:	[	'''
				- var colorList 	= data.commentData.colorExamples
				- var _parentVar 	= 'Colors'
				ul
					each color, index in colorList
						- var _usageVar = color.class
