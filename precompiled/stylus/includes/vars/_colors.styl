//	Smoothing Mixin - trouble rendering with Stylus
font-smoothing(value = 'on')
	if value == 'on'
		-webkit-font-smoothing: antialiased
		-moz-osx-font-smoothing: grayscale
	else
		-webkit-font-smoothing: subpixel-antialiased
		-moz-osx-font-smoothing: auto



ColorPallets = {
	copy: {
		color: Colors.black
		background-color:Colors.white
		-webkit-font-smoothing: subpixel-antialiased	// use mixin for these with later stylus version
		-moz-osx-font-smoothing: auto
	},
	button: {
		color: Colors.white
		background-color:Colors.black
		-webkit-font-smoothing: antialiased
		-moz-osx-font-smoothing: grayscale
	},
	faded-link: {
		color:Colors.cloud
		background-color:Colors.white
		-webkit-font-smoothing: subpixel-antialiased
		-moz-osx-font-smoothing: auto
	},
	promotion: {
		color:Colors.white
		background-color:Colors.clover
		-webkit-font-smoothing: antialiased
		-moz-osx-font-smoothing: grayscale
	},
	error-text: {
		color:Colors.error
		background-color:Colors.white
		-webkit-font-smoothing: subpixel-antialiased
		-moz-osx-font-smoothing: auto
	},
	gold-text: {
		color:Colors.gold
		background-color:Colors.white
		-webkit-font-smoothing: subpixel-antialiased
		-moz-osx-font-smoothing: auto
	},
	faded-bg: {
		color:Colors.black
		background-color:Colors.wisp
		-webkit-font-smoothing: subpixel-antialiased
		-moz-osx-font-smoothing: auto
	}
}

for name in ColorPallets
	.styleguide-pallet-tile.{name}
		include(ColorPallets[name]);
